{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2015",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    // "src/**/*.ts",
    // "src/**/*.d.ts",
    // "src/**/*.tsx",
    // "src/**/*.vue",
    // "tests/**/*.ts",
    // "tests/**/*.tsx"
    "src/**/*"
  ],
  "typeRoots": ["./src/types"],
  "exclude": [
    "node_modules"
  ]
}
